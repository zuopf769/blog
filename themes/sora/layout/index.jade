extends base

block append meta
  link(rel="preload" href="https://github.com/egoist.png" as="image" media="(min-width: 768px)")

block page
  section.centered
    h2.egoist-name
      | eg<div class="avatar">o</div>ist<span>ian</span>
      br
      | zen<span>g</span>
    ul.post-list
      - page.posts.each(function(post) {
        +article(post)
      - })
    .home-pagenavi
      if page.next
        a.old(href="/page/#{page.next}") 旧的文章
      if page.prev
        a.new(href=page.prev === 1 ? '/' : "/page/#{page.prev}") 新的文章

block append scripts
  script(src="/js/app.js?v=#{config.version}")
