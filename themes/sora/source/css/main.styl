@import 'nib';
@import 'normalize';
@import "vars";

body
  font 300 1em/1.8 $fonts
  background-color #fdf6e3
  margin 0

ul
  margin 0

h1, h2, h3, h4, h5
  margin 0
  font-weight 400

a
  text-decoration none
  &:hover
    cursor crosshair

*
  box-sizing border-box

.header
  height 30px
  line-height @height
  background-color #93a1a1
  display flex
  h1.site-name
    font-weight 400
    a
      font-size 14px
      width 70px
      padding-left 10px
      background-color #586e75
      display block
      color #eee8d5
      &:hover
        font-weight bold

.dropdown-menu
  padding 0 5px
  height 30px
  position relative
  float right !important
  &:hover
    .nav-more-trigger
      cursor crosshair
      color #eee8d5
  .dropdown-list
    position absolute
    right 0
    padding-left 0
    top 30px
    white-space nowrap
    display none
    &.visible
      display block
    a
      background-color #93a1a1
      &:hover
        background-color #586e75
        color #eee8d5
  .nav-more-trigger
    height 30px
    color #586e75

.centered
  max-width 52em
  margin 40px 70px

[v-cloak]
  display none

.egoist-name
  color #586e75
  font-size 8rem
  text-transform uppercase
  line-height 100%
  margin-top 30px
  font-weight 300
  span
    color #b58900

@media screen and (min-width: 768px)
  .egoist-name
    .avatar
      height 6.7rem
      width @height
      vertical-align -12px
      margin 0 3px
      border 1px solid #000
      border-radius 50%
      background-image url(https://github.com/egoist.png)
      background-size cover
      background-position center
      display inline-block
      text-indent -99999px
      opacity .8
      transition opacity .3s ease
      &:hover
        opacity 1
        animation spin 7s 0s infinite linear
        background-image url(/images/madara-eye.jpg)

@media screen and (max-width: 768px)
  .egoist-name
    .avatar
      text-indent 0
      display inline-block

@keyframes spin
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)


.home-writings
  margin-top 30px

.post-list
  margin-top 50px
  padding-left 0
  .post-item
    list-style-type none
    margin-bottom 30px
    .post-title
      font-weight 300
      a
        color #b58900
        font-size 2rem
        line-height 120%
        &:hover
          color #ff69b4

.footer
  background-color #eee8d5
  color #93a1a1
  height 30px
  line-height @height
  font-size 14px
  .centered
    margin-bottom 0
    &>span
      margin-right 5px
  a
    color #93a1a1
    &:hover
      text-decoration underline

.nav
  padding-left 0
  width 100%
  li
    list-style-type none
    float left
    a
      color #586e75
      font-size 14px
      padding 0 10px
      display block
      &:hover, &.active
        color #eee8d5

.sticky
  position -webkit-sticky
  position sticky
  top 0

.sticky:before, .sticky:after
  content ''
  display table

.home-pagenavi
  magin-bottom 30px
  a
    margin-right 20px
    background-color #eee8d5
    color #b58900
    padding 0 10px
    height 38px
    font-size 14px
    line-height @height
    transition all .3s ease
    position relative
    overflow hidden
    display inline-block
    &.old
      &:before
        content '旧的文章'
    &:before
      content '新的文章'
      width 100%
      left 0
      transform translateX(-100%)
      text-align center
      top 0
      bottom 0
      background-color #b58900
      position absolute
      transition transform .3s ease
      z-index 1
      color #eee8d5
    &:hover
      color #eee8d5
      &:before
        transform translateX(0)

.coding-support
  display none
  &.visible
    display inline-block

@import 'markdown';
@import 'post';
@import 'mobile';
@import 'form';
